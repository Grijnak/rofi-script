#!/usr/bin/env python3

import sys
import os

options = ('shutdown', 'sleep', 'hibernate', 'log out', 'reboot', 'boot to bios')

text = {
    'shutdown': 'Shut down',
    'sleep': 'Sleep',
    'hibernate': 'Hibernate',
    'log out': 'Log out',
    'reboot': 'Reboot',
    'boot to bios': 'Boot to bios'
}

icons = {
    'shutdown': '\u23fb',
    'sleep': '\u23fe',
    'hibernate': '\U0001f5b4',
    'log out': '\U0001f872\u20de',
    'reboot': '\u2b6e ',
    'boot to bios': '\U0001f527\ufe0e'
}

actions = {
    'shutdown': 'systemctl poweroff',
    'sleep': 'systemctl suspend',
    'hibernate': 'systemctl hibernate',
    'log out': 'i3-msg exit',
    'reboot': 'systemctl reboot',
    'boot to bios': 'systemctl reboot --firmware-setup'
}

# arrows = ['\u2192', '\u27f6', '\u21e8', '\u2b95', '\u27a1', '\U0001f852',
#         '\U0001f83a', '\U0001f846', '\U0001f83e', '\U0001f842', '\U0001f812',
#         '\U0001f816', '\U0001f81a', '\U0001f81e', '\u2b62', '\U0001f802',
#         '\U0001f806', '\U0001f80a', '\U0001f822', '\U0001f826', '\U0001f82a',
#         '\U0001f82e', '\U0001f832', '\U0001f862', '\U0001f86a', '\U0001f872',
#         '\U0001f87a', '\U0001f882', '\u21d2', '\u2794']

if __name__ == '__main__':
    if len(sys.argv) == 1:
        print("\0prompt\x1fPower menu")
        for option in options:
            print(icons[option], text[option], '\0info\x1f', actions[option])
    else:
        action = os.getenv('ROFI_INFO')
        os.system(action)

