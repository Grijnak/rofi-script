#!/usr/bin/env python3

import os


OPTIONS = {
    'shutdown': {
        'text': 'Shut down',
        'icon': '\u23fb', # ‚èª
        'action': 'systemctl poweroff',
        'confirm': True
    },
    'sleep': {
        'text': 'Sleep',
        'icon': '\u23fe', # ‚èæ
        'action': 'systemctl suspend',
        'confirm': False 
    },
    'hibernate': {
        'text': 'Hibernate',
        'icon': '\U0001f5b4', # üñ¥
        'action': 'systemctl hibernate',
        'confirm': False 
    },
    'reboot': {
        'text': 'Reboot',
        'icon': '\u2b6e ', # ‚≠Æ
        'action': 'systemctl reboot',
        'confirm': True
    },
    'logout': {
       'text': 'Log out',
        'icon': '\U0001f872\u20de', # ü°≤‚Éû
        'action': 'i3-msg exit',
        'confirm': True
    },
    'boot2bios': {
        'text': 'Boot to bios',
        'icon': '\U0001f527\ufe0e', # üîßÔ∏é
        'action': 'systemctl reboot --firmware-setup',
        'confirm': True
    }
}


if __name__ == '__main__':
    choice = os.getenv('ROFI_INFO')
    if choice is None or not choice:
        print("\0prompt\x1fPower menu")
        for key, option in OPTIONS.items():
            print(f'{option["icon"]} {option["text"]}\0info\x1f{key}')
    else:
        choice = choice.split(' ')
        key = choice[0]
        option = OPTIONS[key]
        if option['confirm'] and len(choice) == 1:
            print('\0prompt\x1fAre you sure?')
            print(f'{option["icon"]} {option["text"]}\0info\x1f{key} confirm')
            print('\U0001f5d9 Cancel\0info\x1f')
        else:
            os.system(option['action'])
